{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleDetection": "auto",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",                           
  },
  "include": [
    "src",
    ],
  "exclude": [
    "node_modules"
  ],
}
